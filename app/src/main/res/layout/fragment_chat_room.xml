<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chat_wa"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        >

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@android:color/white"
            android:paddingStart="@dimen/_16sdp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/textBlack"
            >

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow_back"
                />

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_person_gray"
                android:layout_toEndOf="@id/backBtn"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                style="@style/textSub3"
                android:textSize="16sp"
                android:text="Toolbar Title"
                android:layout_toEndOf="@+id/profileImg"
                />

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/chat_interaction_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout"
        android:layout_above="@+id/messageLayout"
        >

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            tools:listitem="@layout/item_my_chat"-->
<!--            tools:itemCount="3"-->
<!--            />-->

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <include
            android:id="@+id/list"
            layout="@layout/recycler_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/messageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="16sp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40sdp"
            android:background="@drawable/bg_outline_gray"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/sendMessageBtn"
            android:layout_marginEnd="@dimen/_8sdp"
            >

            <EditText
                android:id="@+id/messageEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ketik pesan"
                android:background="@android:color/transparent"
                android:minHeight="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/cerapro_regular"
                android:maxLines="3"
                android:imeOptions="actionSend"
                android:textSize="@dimen/_14ssp"
                />


        </RelativeLayout>

        <ImageButton
            android:id="@+id/sendMessageBtn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_send"
            android:background="@drawable/btn_circle_primary"
            />


    </RelativeLayout>

</RelativeLayout>