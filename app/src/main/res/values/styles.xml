        <item name="android:fontFamily">@font/cerapro_bold</item>
    </style>

    <style name="textAction" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
