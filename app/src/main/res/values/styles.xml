    /*
    TEXT CUSTOM
    */ --------------------------

    <style name="textLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textBlack3</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/cerapro_regular</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
    </style>

    <style name="textPrice" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/cerapro_bold</item>
    </style>

    <style name="textPriceDisable" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textBlack3</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/cerapro_regular</item>
    </style>

    <style name="textDiscount" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textRed</item>
