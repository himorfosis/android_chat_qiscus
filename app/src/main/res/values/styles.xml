    <style name="textNotification" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">8dp</item>
        <item name="android:fontFamily">@font/cerapro_regular</item>
    </style>

    /*
    Animation
    */ --------------------------

    <style name="AppTablayoutTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutStyle</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/cerapro_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Tablayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    /*
    Animation
    */ --------------------------

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    /*
    BUTTON
    */ --------------------------

    <!--  App Compact Button  -->

    <style name="btnPrimary" parent="android:Widget.Button">
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/cerapro_medium</item>
    </style>

    <style name="btnOutline" parent="Widget.AppCompat.Button">
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:background">@drawable/btn_outline</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/cerapro_medium</item>
    </style>

    /*
    EDIT TEXT
    */ --------------------------

    <style name="inputData" parent="android:Widget.EditText">
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:background">@drawable/btn_outline_gray</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/cerapro_regular</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
    </style>

    <style name="inputDataBorder" parent="android:Widget.EditText">
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:background">@drawable/btn_outline_gray</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/cerapro_regular</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
    </style>


</resources>